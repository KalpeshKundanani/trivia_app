<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app_scrip_assignment.trivia">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".history.QuizHistoryActivity" />
        <activity
            android:name=".splash_screen.SplashScreenActivity"
            android:theme="@style/SplashScreenStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".summary.QuizSummaryActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".main.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".quiz.QuizActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>